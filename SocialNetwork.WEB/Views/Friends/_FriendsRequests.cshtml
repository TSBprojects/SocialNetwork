@using SocialNetwork.BLL.DataTransferObjects
@model IEnumerable<UserDTO>
@{
    Layout = null;
}

@if (ViewBag.isList)
{
    foreach (UserDTO u in Model)
    {
        <div class="friend" userId="@u.Id">
            <a href="#" class="friend-img-link">
                <img class="friends-img" src="@u.ProfileImage.FilePath" />
            </a><div class="friends-user-info">
                <a href="#" class="friends-user-name">@u.FirstName @u.LastName</a>
                <a href="#" class="friends-user-add link-button">Добавить в друзья</a>
            </div>
        </div>
    }
}
else
{
    <div id="friends-nav">
        <a id="friends-tab-inbox" class="friends-tab link-button">
            <span class="friends-tab-title">Входящие</span>
            <span class="friends-count">@ViewBag.IncomingRequestsCount</span>
        </a><a id="friends-tab-outbox" class="friends-tab link-button">
            <span class="friends-tab-title">Исходящие</span>
            <span class="friends-count">@ViewBag.OutboundRequestsCount</span>
        </a>
        <div id="friends-tab-line"></div>
    </div>
    <div id="requests-list">
        @foreach (UserDTO u in Model)
        {
            <div class="friend" userId="@u.Id">
                <a href="#" class="friend-img-link">
                    <img class="friends-img" src="@u.ProfileImage.FilePath" />
                </a><div class="friends-user-info">
                    <a href="#" class="friends-user-name">@u.FirstName @u.LastName</a>
                    <a class="friends-user-add link-button">Добавить в друзья</a>
                </div>
            </div>
        }
    </div>
}